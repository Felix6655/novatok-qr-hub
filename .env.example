# =============================================
# NovaTok QR Hub - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# The app will run with graceful degradation if keys are missing

# =============================================
# Supabase Configuration (Auth + Database)
# =============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# =============================================
# Stripe Configuration (Fiat Payments - TEST MODE)
# =============================================
# Get these from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================
# WalletConnect Configuration (Web3 Wallet)
# =============================================
# Get Project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# =============================================
# Blockchain Configuration (Sepolia Testnet)
# =============================================
# Chain ID: 11155111 = Sepolia Testnet
NEXT_PUBLIC_CHAIN_ID=11155111

# NOVA Token Contract Address (ERC-20)
# Replace with your deployed NOVA token address
NEXT_PUBLIC_NOVA_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# NovaTok NFT Contract Address (ERC-721)
# Replace with your deployed NFT contract address
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================
# Application Configuration
# =============================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# MongoDB (used as fallback when Supabase is not configured)
MONGO_URL=mongodb://localhost:27017
DB_NAME=novatok_qr_hub
